{
  "name": "mirrorly-api",
  "version": "1.0.0",
  "description": "API REST para plugin Mirrorly WordPress",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:docker": "npm run clean && npm run type-check && tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear src/app.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/app.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run type-check",
    "prestart": "npm run build",
    "docker:build": "docker build -t mirrorly-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mirrorly-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop mirrorly-api",
    "pm2:restart": "pm2 restart mirrorly-api",
    "pm2:logs": "pm2 logs mirrorly-api",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "deploy:rollback": "./scripts/deploy.sh rollback",
    "setup": "npm install && npm run build",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed",
    "test:models": "ts-node src/scripts/test-models.ts",
    "optimize": "ts-node src/scripts/optimize-performance.ts",
    "optimize:dry-run": "ts-node src/scripts/optimize-performance.ts -- --dry-run",
    "optimize:db": "ts-node src/scripts/optimize-performance.ts -- --db-only",
    "optimize:files": "ts-node src/scripts/optimize-performance.ts -- --files-only",
    "optimize:assets": "ts-node src/scripts/optimize-performance.ts -- --assets-only"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.5",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "uuid": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "sequelize-cli": "^6.6.3",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "typescript",
    "google-ai",
    "image-generation"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later"
}
