{
  "name": "mirrorly-api",
  "version": "1.0.0",
  "description": "API REST para plugin Mirrorly WordPress",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear src/app.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/app.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run lint && npm run type-check",
    "prestart": "npm run build",
    "docker:build": "docker build -t mirrorly-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mirrorly-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop mirrorly-api",
    "pm2:restart": "pm2 restart mirrorly-api",
    "pm2:logs": "pm2 logs mirrorly-api",
    "deploy": "npm run build && npm run pm2:restart",
    "setup": "npm install && npm run build",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed",
    "test:models": "ts-node src/scripts/test-models.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "sharp": "^0.32.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "typescript",
    "google-ai",
    "image-generation"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later"
}
