# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database (Docker MySQL service)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=mirrorly_dev
DB_NAME_TEST=mirrorly_test
DB_USER=mirrorly_dev
DB_PASS=dev_password
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis (Docker Redis service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_password

# Google Generative AI
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# JWT
JWT_SECRET=dev_super_secret_jwt_key_for_development_only
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12