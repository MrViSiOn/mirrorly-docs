{
  "name": "mirrorly-wordpress-plugin",
  "version": "1.0.0",
  "description": "Plugin WordPress para visualizaci√≥n de productos con IA",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "test": "phpunit --configuration phpunit.xml",
    "lint": "npm run lint:php && npm run lint:js",
    "lint:php": "phpcs --standard=WordPress mirrorly/",
    "lint:js": "eslint assets/js/",
    "lint:fix": "npm run lint:php:fix && npm run lint:js:fix",
    "lint:php:fix": "phpcbf --standard=WordPress mirrorly/",
    "lint:js:fix": "eslint assets/js/ --fix",
    "release": "npm run build && npm run package",
    "package": "node scripts/package.js",
    "clean": "rm -rf build/ node_modules/"
  },
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "terser-webpack-plugin": "^5.3.9",
    "eslint": "^8.55.0",
    "archiver": "^6.0.1"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "woocommerce",
    "ai",
    "image-generation"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later"
}