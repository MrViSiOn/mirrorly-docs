{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node-debug-api",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceFolder}/api/src/app.ts",
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
      ],
      "cwd": "${workspaceFolder}/api",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug API Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--config",
        "${workspaceFolder}/api/jest.config.js",
        "--runInBand",
        "--no-cache",
        "--no-coverage",
        "--detectOpenHandles",
        "src/tests/${fileBasenameNoExtension}.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/api/dist/**/*.js",
        "${workspaceFolder}/api/src/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/api/src/**",
        "${workspaceFolder}/api/tests/**",
        "!**/node_modules/**"
      ]
    }
  ]
}